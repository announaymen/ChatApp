<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/welcome_to_chat"
        android:layout_width="255dp"
        android:layout_height="87dp"
        android:layout_below="@+id/main_page_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="75dp"
        android:text="welcome to the chat App"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_to_chat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="90dp"
        android:text="Already have account"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="72dp"
        android:layout_height="55dp"

        android:layout_below="@+id/start_login_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:text="@string/need_a_new_account"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />


</RelativeLayout>